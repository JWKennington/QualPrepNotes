% Create a token value for "no label given"
\newcommand{\nolabel}{NOLABEL}


% Define a new \eqn command that is a shorthand for wrapping in 
% an "equation" environment, makes one-liners easier to read
\newcommand{\eqn}[2][\nolabel]{\begin{equation}\ifthenelse{\equal{#1}{\nolabel}}{}{\label{#1}} #2 \end{equation}}


% Redefine the standard \vec "vector" command to be a boldfaced symbol
\renewcommand{\vec}[1]{
	\boldsymbol{\mathbf{#1}}
}


% Define shorthand "\tens" for 
\newcommand{\tens}[1]{
	\mathcal{#1}
}

% Define new symbol "\Lag" for the Lagrangian
\newcommand{\Lag}{\mathcal{L}}


% Define new symbol '\Ham' for the Hamiltonian
\newcommand{\Ham}{\mathcal{H}}


% Define shorthand "\p" for partial derivative "\partial"
\newcommand{\p}{\partial}

% Define shorthand "\R3" for R^3
\newcommand{\Rn}[1][n]{\mathbb{R}^{#1}}
\newcommand{\R}{\Rn[]}
\newcommand{\RTwo}{\Rn[2]}
\newcommand{\RThree}{\Rn[3]}


% Define shorthand "\dual" vector dual ^*
\newcommand{\dual}[1]{{#1}^*}

% Define a shorthand '\del' for "\nambla"
\newcommand{\del}{\nabla}


% Define a shorthand '\half' for "\frac{1}{2}"
\newcommand{\half}{\frac{1}{2}}


% Define new shorthand "\where" for ", \quad\quad where\ \ "
% Useful for one-line equations where a new symbol can be defined 
% at the end of the line instead of requiring a new line
\newcommand{\where}[1][2]{,\hspace*{#1em} \mathrm{where}\ \ }


% Define a new command for taking time-derivatives of an optional expression.
\newcommand{\ddt}[1][]{\frac{d #1}{dt}}


% Define a new command for wrapping in parentheses
\newcommand{\wrap}[1]{\left(#1\right)}
\newcommand{\wrapc}[1]{\left\{#1\right\}}
\newcommand{\wraph}[1]{\left[#1\right]}

% Define a new command for the norm of a vector
\newcommand{\norm}[1]{\left\lvert#1\right\rvert}

% Define a new command for taking partial derivatives
\newcommand{\pd}[2]{\frac{\p #1}{\p #2}}


% Define a new command for "quote box"
\newcommand{\quotebox}[2][0.8]{
	\begin{center}
 		\framebox{
 			\parbox{\dimexpr #1\linewidth-2\fboxsep-2\fboxrule}
 			{\itshape #2}
  		}
  	\end{center}
}


% Define new command for "naming" an equation below the assigned number
\newcommand{\eqname}[1]{\tag*{#1}}



% Define new command for including pdf/pdf_tex inkscape figures
\newcommand{\incfig}[2][1.0]{%
    \def\svgwidth{#1\columnwidth}
    \import{./figures/}{#2.pdf_tex}
}


% Define a shorthand for including a figure
\newcommand{\texfig}[3][1.0]{
	\begin{figure}[ht]
	    \centering
    	\incfig[#1]{#2}
	    \caption{#3}
    	\label{fig:#2}
	\end{figure}
}


% Equation Size Scale
\newcommand{\eqscale}[2][1.0]{\scalebox{#1}{$#2$}}
\newcommand{\eqsmall}[1]{\eqscale[0.8]{#1}}

% Redefine "boxed" to accept a padding parameter
\renewcommand{\boxed}[2][\fboxsep]{{%
  \setlength{\fboxsep}{#1}\fbox{\m@th$\displaystyle#2$}}}


